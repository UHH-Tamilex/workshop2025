<text corresp="#I4m" xml:lang="ta"><body>
  <lg xml:id="TK1">
    <l><pb facs="4" n="1r"/>akaramutalav veḻuttellām māti</l>
    <l>pakavaṉ mutaṟṟe <unclear>yula</unclear>ku</l>
  </lg>
  <lg xml:id="TK2">
    <l>kaṟṟataṉā lāyap payaṉeṉkol vāṉṟivā</l>
    <l>ṉaṟṟāḷ to<unclear>ḷā</unclear> reṉiṉ</l>
  </lg>
  <lg xml:id="TK3">
    <l>malarmicai yekiṉāṉ māṇaṭi cērntār</l>
    <l>nilamicai nīṭuvāḻ vār</l>
  </lg>
  <lg xml:id="TK4">
    <l>veṇṭutal veṇ<unclear>ṭāmai</unclear> <sic>yillāṇṭi</sic> cērntārk</l>
    <l>kiyāṇṭu mīṭumpai yila</l>
  </lg>
  <lg xml:id="TK5">
    <l>iruḷcē riruviṉaiyuñ <unclear>cērā</unclear> viṟaivaṉ</l>
    <l>poruḷcēr pukaḻ purintār māṭṭu</l>
  </lg>
</body></text></TEI>
